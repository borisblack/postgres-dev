{
	"name": "Postgres Dev",

	"dockerFile": "./Dockerfile",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],

	"remoteUser": "postgres",

	"otherPortsAttributes": { "onAutoForward" : "ignore" },
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.makefile-tools",
				"ash-blade.postgresql-hacker-helper"
			]
		}
	}
}